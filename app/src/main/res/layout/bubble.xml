<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:bl_cornersRadius="10dip"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="125dp"
    app:bl_arrowWidth="16dp"
    app:bl_arrowDirection="bottom"
    app:bl_bubbleColor="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/container_msg"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_send_time"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_user_name"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_container_type"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_route_type"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_devicesnum"
            android:gravity="left"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_container_id"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_train_id"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_Latitude_id"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/tv_Longtitude_id"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_address_id"
            android:gravity="left"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            >
        </LinearLayout>
        <Button
            android:id="@+id/btn_query"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="8dp"
            android:gravity="top|center"
            android:text="轨迹查询"
            android:background="@drawable/query_button"/>
    </LinearLayout>
</com.daasuu.bl.BubbleLayout >
